{% extends 'base.html.twig' %}

{% block title %}Activity{% endblock %}

{% block body %}
    <h1>Activity</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ Activity.id }}</td>
            </tr>
            <tr>
                <th>Begin</th>
                <td>{{ Activity.Begin ? Activity.Begin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>End</th>
                <td>{{ Activity.End ? Activity.End|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ Activity.Name }}</td>
            </tr>
            <tr>
                <th>StudentGroup</th>
                <td>{{ Activity.StudentGroup }}</td>
            </tr>
            <tr>
                <th>Lecturer</th>
                <td>{{ Activity.Lecturer }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('Activity_index') }}">back to list</a>

    <a href="{{ path('Activity_edit', {'id': Activity.id}) }}">edit</a>

    {{ include('Activity/_delete_form.html.twig') }}
